<div class="row p-t-10">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <%= @repo.name %>
            </div>
            <div class="panel-body">
                <%= @repo.description.present? ? @repo.description : t('repositories.errors.no_description') %>
            </div>
            <div class="panel-footer">
                <p>
                    <small class="text-muted">
                        <i class="fa fa-clock-o"></i>
                        <%= t('repositories.pushed') %> <%= time_ago_in_words(@repo['pushed_at']) %> <%= t('ago') %>
                    </small>
                    <br />
                    <small class="text-muted">
                        <i class="fa fa-star"></i>
                        <%= t('repositories.stars') %>: <%= @repo['stargazers_count'] %>
                    </small>
                    <br />
                    <small class="text-muted">
                        <i class="fa fa-eye"></i>
                        <%= t('repositories.watchers') %>: <%= @repo['watchers_count'] %>
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>

<% if @errors.blank? %>
    <%= render 'commits' %>
<% else %>
    <%= @errors.join('<br />') %>
<% end %>